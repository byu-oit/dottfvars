{
  "name": "@byu-oit/dottfvars",
  "description": "Loads environment variables from a .tfvars or .tfvars.json file into process.env",
  "version": "0.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "del dist && tsc",
    "coverage": "npm run test -- --coverage || exit 0",
    "lint": "ts-standard | snazzy",
    "lint:fix": "ts-standard --fix | snazzy",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run lint && npm run build && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/byu-oit/dottfvars.git"
  },
  "keywords": [
    "environment",
    "variables",
    "tfvars",
    "terraform",
    "hcl"
  ],
  "author": "Spencer Tuft <stuft2@byu.edu>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/byu-oit/dottfvars/issues"
  },
  "homepage": "https://github.com/byu-oit/dottfvars#readme",
  "dependencies": {
    "hcl-to-json": "^0.1.1"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.36",
    "del-cli": "^3.0.1",
    "env-var": "^7.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "snazzy": "^9.0.0",
    "ts-jest": "^26.5.4",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.tsx": "npm run lint:fix"
  }
}
